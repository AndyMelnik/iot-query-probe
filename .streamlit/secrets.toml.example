# Streamlit Secrets Configuration
# Copy this file to secrets.toml and fill in your values
# NEVER commit secrets.toml to version control!

# =============================================================================
# JWT Secret Key (Required)
# =============================================================================
# Used for signing authentication tokens
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET = "your-secret-key-here-generate-a-secure-random-string"

# =============================================================================
# DEVELOPMENT MODE (Optional - Local Testing Only)
# =============================================================================
# Enable this section to test locally without the Navixy middleware.
# When enabled, you can authenticate using: http://localhost:8501/?session_key=any_value
#
# ⚠️ DISABLE IN PRODUCTION - Remove or set enabled = false

[dev]
enabled = false

# IoT Database URL - for telemetry and device data
# Format: postgresql://username:password@host:port/database?sslmode=require
iot_db_url = "postgresql://role_user:password@db.example.com:5432/iot_database"

# User Database URL - for user preferences and settings
# Format: postgresql://username:password@host:port/database?sslmode=require
user_db_url = "postgresql://role_dashboard_studio:password@db.example.com:5432/user_database"
